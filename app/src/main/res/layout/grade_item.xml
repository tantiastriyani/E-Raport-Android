<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#f0f0f0"
    android:layout_margin="5dp"
    >
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/txtMapel"
        android:layout_width="100dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/txtAngkaPengetahuan"
        android:layout_width="50dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <TextView
        android:id="@+id/txtPredikatPengetahuan"
        android:layout_width="60dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <TextView
        android:layout_marginRight="5dp"
        android:id="@+id/txtDeskripsiPengetahuan"
        android:layout_width="140dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_gravity="top"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/txtAngkaKeterampilan"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtPredikatKeterampilan"
        android:layout_width="60dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_gravity="top" />

    <TextView
        android:layout_marginRight="5dp"
        android:id="@+id/txtDeskripsiPengetahuanKeterampilan"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textAlignment="center" />

</LinearLayout>